include ../parcials/head
body
   include ../layout/navbar
   .container.mx-auto.p-4
      a.inline-block.bg-green-600.text-white.mt-auto.py-1.px-3.mb-4(href="/notes/new")
         | NEW NOTE
      ul.grid(class="grid-cols-1 row-gap-4 sm:grid-cols-2 sm:col-gap-4 md:grid-cols-3")
         each note in notes
            li.border.p-4
               h3.font-semibold.flex.justify-between.uppercase= note.title
                  a.text-xs(href=`/notes/edit/${note._id}`) edit
               div
                  p= note.description
               form.mt-4(action=`/notes/delete/${note._id}?_method=DELETE`, method="POST")
                  //- input(type="hidden", name="_method", value="DELETE")
                  button.w-full.block.bg-red-600.text-white.mt-auto.py-1.px-3(type="submit", class="focus:bg-red-700")
                     | Delete