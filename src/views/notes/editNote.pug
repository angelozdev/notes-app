include ../parcials/head
body
   include ../layout/navbar
   .container.mx-auto.p-4
      .border.p-4
         h2.text-2xl.mb-4.font-semibold Edit Note
         form(action=`/notes/edit/${note._id}?_method=PUT`, method="POST")
            input(type="hidden", name="_method", value="PUT")
            div.mb-4
               label(for="title") Title
               input.block.w-full.border.border-gray-300.py-1.px-3.outline-none#title(class="focus:border-gray-600", type="text", name="title", autofocus, value=`${note.title}`)
            div.mb-4
               label(for="description") Description
               textarea.block.w-full.border.border-gray-300.py-1.px-3.outline-none#description(class="focus:border-gray-600", type="text", name="description",)
                  | #{note.description}
            button.bg-green-500.text-white.py-1.px-3(type="submit") Save Note